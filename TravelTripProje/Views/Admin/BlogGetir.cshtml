@model TravelTripProje.Models.Sınıflar.Blog
@{
    ViewBag.Title = "BlogGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*<h2>BlogGetir</h2>*@

<p style=" font-size:25pt; font-family:Geneva;">-Blog Güncelleme Alanı-</p>
<br />
@using (Html.BeginForm("BlogGuncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.Id)
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control" , @readonly= "readonly" })
    <br />

    @Html.LabelFor(x => x.Baslık)
    @Html.TextBoxFor(x => x.Baslık, new { @class = "form-control", })
    <br />

    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", })
    <br />

    @Html.LabelFor(x => x.BlogImage)
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control", })
    <br />

    @Html.LabelFor(x => x.Acıklama)
    @Html.TextAreaFor(x => x.Acıklama, 15 , 1 , new { @class = "form-control", })
    <br />
    <button class="btn btn-outline-success">Blog Güncelle</button>
    }
