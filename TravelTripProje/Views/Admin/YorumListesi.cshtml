@using TravelTripProje.Models.Sınıflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>
<table class="table table-bordered table-striped , table-hover , table-green">
    <tr>
        <th>ID</th>
        <th>Kulllanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.KullanıcıAdı</td>
            <td>@x.Mail</td>
            <td>@x.Yorum</td>
            <td>@x.BLOGI.Baslık </td>
            <td><a href="/Admin/YorumSil/@x.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/YorumGetir/@x.Id" class="btn btn-outline-success">Güncelle</a></td>
            

        </tr>
    }










</table>
